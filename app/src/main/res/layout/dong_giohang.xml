<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:weightSum="10"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <ImageView
            android:src="@drawable/iconapp"
            android:id="@+id/imghinhanhsp"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txttenmonhang"
            android:text="Ten san pham"
            android:textSize="25sp"
            android:textColor="#f000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtgiamonhang"
            android:text="Gia san pham"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:textColor="#ED000000" />
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:focusable="false"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="-"
                android:backgroundTint="@android:color/black"
                android:id="@+id/btngiamsoluong" />
            <Button
                android:focusable="false"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="1"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/white"
                android:id="@+id/btnhienthi" />
            <Button
                android:focusable="false"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="+"
                android:backgroundTint="@android:color/black"
                android:id="@+id/btntangsoluong" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>